<!doctype html>
<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="/css/pengguna.css">
    <link rel="stylesheet" type="text/css" href="/css/fontawesome/css/all.css">
    <style>
      
    </style>
    <title>Data Dosen</title>
  </head>
  <body>
          <div class="header">
            <nav class="wrapper">
              <div class="brand">
                <div class="image"><img src="/image/icon.png"></div>
                <div class="logo">Admin</div>
              </div>
              <ul>
                <li>
                  <a href="/logout">
                  <button type="submit" title="Log Out"><i class="fas fa-sign-out fa-2x"></i></button>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
        <div class="grid-container">
          <div class="side"> 
            <nav id="sidebar">
              <ul class="list-items">
                 <li><a href="#"><i class="fas fa-columns"></i>Dashboard</a></li>
                 <li><a href="/dDosen"><i class="fas fa-user"></i>Akun Dosen</a></li>
                 <li><a href="/"><i class="fas fa-database"></i>Semester Ajaran</a></li>
                 <li><a href="/"><i class="fas fa-calendar-check"></i>Perioda Review</a></li>
                 <li><a href="/"><i class="fas fa-users"></i>Hapus Data</a></li>
              </ul>
              </nav>
          </div>
          <div class="content">
            <div class="header">
              <div class="content-container">
                <div class="tambah">
                  <a href="/add">Tambah data</a>
                </div>
               
              <table class="table" border="">
                <thead>
                  <tr>
                      <th scope="col">NIK</th>
                      <th scope="col">Nama</th>
                      <th scope="col">Email</th>
                      <th scope="col">Password</th>
                      
                  </tr>
                </thead>
                <tbody>
                <% for(let data of dosenData) { %>
                <tr>
                    <td><%= data.NIK%></td>
                    <td><%= data.name%></td>    
                    <td><%= data.Email%></td>
                    <td><%= data.Password%></td>  
                    
                    <td > 
                      <div class="action">
                        <a href="/edit/<%= data.id%>"><i class="fa-solid fa-pen-to-square fa-2x"></i></a>
                        <a href="/delete/<%= data.id %>"onClick="return confirm('Apakah yakin akan menghapus?')"><i class="fa-solid fa-trash-can fa-2x"></i></a>
                        
                      </div>
                    </td>         
                </tr>
                <% } %>
                </tbody>
              </table>
              </div>
            </div>
          </div>
                  

    
</body>
                
  </html>